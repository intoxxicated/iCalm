<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_design">

        <ImageView
            android:id="@+id/iv_slider2"
            android:layout_width="500dp"
            android:layout_height="340dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/women" />

        <TextView
            android:id="@+id/tvHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_below="@id/iv_slider2"
            android:layout_marginTop="240dp"
            android:text=" Practice Self Help "
            android:letterSpacing="0.2"
            android:layout_centerHorizontal="true"
            android:textSize="32sp"
            android:textStyle="bold"
            android:fontFamily="@font/giveny"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/tvHeading2"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_below="@id/tvHeading"
            android:layout_marginTop="20dp"
            android:text="Practice self help techniques to help improve your mood and mental health."
            android:letterSpacing="0.2"
            android:lineSpacingExtra="12dp"
            android:layout_centerHorizontal="true"
            android:textSize="10dp"
            android:fontFamily="@font/color_tube"
            android:textColor="@color/black" />


    </RelativeLayout>
</layout>