<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity"
        android:background="@drawable/bg_settings"
        android:padding="20dp">


        <de.hdodenhof.circleimageview.CircleImageView
            app:civ_border_width="4dp"
            android:id="@+id/dp"
            android:layout_centerInParent="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/name"
            android:src="@color/white"
            app:civ_border_color="#FF000000"
            android:layout_width="180dp"
            android:layout_height="200dp"/>


        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/times_new_roman"
            android:textAllCaps="true"
            android:text="USER"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dp"
            app:layout_constraintBottom_toTopOf="@id/etName"/>



        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/etName"
            app:layout_constraintEnd_toStartOf="@id/etName"
            android:layout_marginLeft="20dp"
            android:layout_alignTop="@id/etName"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="15"
            android:hint="Update Your Name"
            android:textStyle="bold"
            android:fontFamily="@font/times_new_roman"
            android:textColor="@color/black"
            android:textColorHint="#403E3E"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/name"
            android:layout_marginTop="70dp"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/phone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/etPhone"
            app:layout_constraintEnd_toStartOf="@id/etPhone"
            android:layout_marginLeft="20dp"
            android:layout_alignTop="@id/etPhone"/>
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="15"
            android:hint="Update Your Phone No."
            android:textStyle="bold"

            android:padding="8dp"
            android:id="@+id/etPhone"
            app:layout_constraintTop_toBottomOf="@id/etName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="30dp"
            android:textSize="16dp"
            android:fontFamily="@font/times_new_roman"

            android:inputType="phone"
            android:textColorHint="#403E3E"
            android:textColor="@color/black"/>


        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/email"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/etEmail"
            app:layout_constraintEnd_toStartOf="@id/etEmail"
            android:layout_marginLeft="20dp"
            android:layout_alignTop="@id/etEmail"/>
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="15"
            android:hint="Update Your Email"
            android:padding="8dp"
            android:textStyle="bold"

            android:id="@+id/etEmail"
            app:layout_constraintTop_toBottomOf="@id/etPhone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="30dp"
            android:textSize="16dp"
            android:fontFamily="@font/times_new_roman"

            android:inputType="textEmailAddress"
            android:textColorHint="#403E3E"
            android:textColor="@color/black"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/baseline_add_location_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/etAddress"
            app:layout_constraintEnd_toStartOf="@id/etAddress"
            android:layout_marginLeft="20dp"
            android:layout_alignTop="@id/etAddress"/>
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="15"
            android:hint="Add Your Address"
            android:padding="8dp"
            android:id="@+id/etAddress"
            android:textStyle="bold"

            app:layout_constraintTop_toBottomOf="@id/etEmail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="30dp"
            android:textSize="16dp"
            android:fontFamily="@font/times_new_roman"

            android:inputType="textEmailAddress"
            android:textColorHint="#403E3E"
            android:textColor="@color/black"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/age"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/etAge"
            app:layout_constraintEnd_toStartOf="@id/etAge"
            android:layout_marginLeft="20dp"
            android:layout_alignTop="@id/etAge"/>
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="15"
            android:hint="Enter Your Current Age"
            android:padding="8dp"
            android:id="@+id/etAge"
            app:layout_constraintTop_toBottomOf="@id/etAddress"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="30dp"
            android:textSize="16dp"
            android:textStyle="bold"

            android:fontFamily="@font/times_new_roman"
            android:inputType="textPassword"
            android:textColorHint="#403E3E"
            android:textColor="@color/black"/>



        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="150dp"
            android:id="@+id/btnUpdate"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/etAge"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/bg"
            android:textColor="@color/white"
            android:text="UPDATE"
            android:letterSpacing="0.3"
            android:fontFamily="@font/times_new_roman"
            android:textSize="20dp"/>




    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>